@using Cv_Asp.net.Models.Entity
@model List<Tbl_Yetenek>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
@{ string renk = "";}

<h2>Yetenek Listesi</h2>

<!DOCTYPE html>
<html>

<body class="hold-transition sidebar-mini">
    <div class="wrapper">    
            <section class="content">
                <div class="container-fluid">
                    <div class="row">
                        <div class="col-md-12">
                            <div class="card">
                                <div class="card-header">
                                    <h3 class="card-title">Yetenek Listem</h3>
                                </div>                               
                                <div class="card-body">
                                    <a href="/Yetenek/YeniYetenek/" class="btn btn-info">Yeni Yetenek Ekle</a>
                                    <br />
                                    <br />

                                    <table class="table table-bordered">
                                        <thead>
                                            <tr>
                                                <th style="width: 10px">#</th>
                                                <th>Yetenekler</th>
                                                <th>Düzenle</th>
                                                <th>Sil</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (var item in Model)
                                            {

                                                <tr>
                                                    <td>@item.ID</td>
                                                    <td>@item.Yetenek</td>                                                    
                                                    <td>
                                                        <a class="btn btn-info btn-sm" href="/Yetenek/YetenekDuzenle/@item.ID">
                                                            <i class="fas fa-pencil-alt">
                                                            </i>
                                                            Düzenle
                                                        </a>
                                                    </td>
                                                    <td>
                                                        <a class="btn btn-danger btn-sm" href="/Yetenek/YetenekSil/@item.ID">
                                                            <i class="fas fa-trash">
                                                            </i>
                                                            Sil
                                                        </a>
                                                    </td>

                                                </tr>

                                            }


                                        </tbody>
                                    </table>
                                </div>                             
                               
                            </div>                           
                        </div>
                        
                    </div>
                    
                </div>
            </section>          
        </div>       
    
</body>
</html>
